@model IEnumerable<Blog>


@if (Model.Count() > 0)
{
    @foreach (var blog in Model)
    {
        <div class="card mb-2">
            <div class="card-header">
                @blog.Title
            </div>
            <img class="card-img-top" src="~/img/@blog.Image" alt="Card image cap">

            <div class="card-body">
                <h5 class="card-title">@blog.Title</h5>
                <p class="card-text">@blog.Description</p>
                <a asp-controller="Blog" asp-action="Details" asp-route-id="@blog.BlogId" class="btn btn-primary">Blog detils</a>
            </div>
        </div>
    }

}
else
{
    <h2>Blog eklenmemis</h2>
}
